@model IEnumerable<HotelProject.EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="active-member">
    <div class="table-responsive">
        <table class="table table-xs mb-0">
            <thead>
                <tr>
                    <th>Kullanıcı</th>
                    <th>Rol Ata</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name @item.Surname</td>
                        <td><a href="/RoleAssign/AssignRole/@item.Id" class="btn btn-warning" >Rol Ata</a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

