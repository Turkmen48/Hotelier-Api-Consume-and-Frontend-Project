@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form class="form-group" method="post">
    <input type="hidden" asp-for="ServiceID" />
    <label>Hizmet Başlığı:</label>
    <input typeof="text" asp-for="Title" class="form-control"></>
    <span asp-validation-for="Title" class="text-danger"></span>

    <br />
    <label>Hizmet İkonu:</label>
    <input typeof="text" asp-for="ServiceIcon" class="form-control"></>
    <span asp-validation-for="ServiceIcon" class="text-danger"></span>

    <br />
    <label>Servis Açıklaması:</label>
    <input typeof="text" asp-for="Description" class="form-control"></>
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />

    <button type="submit" class="btn btn-warning">Güncelle</button>
</form>


