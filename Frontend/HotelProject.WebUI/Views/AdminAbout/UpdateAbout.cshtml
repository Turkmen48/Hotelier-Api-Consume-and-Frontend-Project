@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form class="form-group" method="post">
    <input type="hidden" asp-for="AboutID" />
    <label>Başlık 1:</label>
    <input typeof="text" asp-for="Title1" class="form-control"></>
    <br />
    <label>Başlık 2:</label>
    <input typeof="text" asp-for="Title2" class="form-control"></>
    <br />
    <label>Oda Sayısı:</label>
    <input typeof="number" asp-for="RoomCount" class="form-control"></>
    <br />
    <label>Personel Sayısı:</label>
    <input typeof="number" asp-for="StaffCount" class="form-control"></>
    <br />
    <label>Müşteri Sayısı:</label>
    <input typeof="number" asp-for="CustomerCount" class="form-control"></>
    <br />
    <label>Açıklama:</label>
    <textarea typeof="text" asp-for="Content" class="form-control"></textarea>
    <br />
    <button type="submit" class="btn btn-warning">Güncelle</button>
</form>

